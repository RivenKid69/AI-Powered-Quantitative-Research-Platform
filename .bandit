# Bandit configuration file for Python security analysis
# https://bandit.readthedocs.io/en/latest/config.html

[bandit]
# Target directories to scan
targets = .

# Exclude these directories from scanning
exclude_dirs = [
    tests,
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    build,
    dist,
    *.egg-info,
    .hypothesis,
    docs,
    data,
    models,
    logs,
    benchmarks,
]

# Skip these test IDs
# B101: assert_used - we use asserts in non-production code
# B311: random - we use random for non-cryptographic purposes (simulation)
# B314: blacklist_xml_ElementTree - not applicable
# B405: import_xml_etree - not applicable
skips = [B101, B311, B314, B405]

# Test plugins to run (empty = all enabled tests)
# tests = []

# Severity level threshold (low, medium, high)
# Only report issues at or above this level
# severity = low

# Confidence level threshold (low, medium, high)
# Only report issues at or above this level
confidence = medium

# Fail the build on Medium+ severity issues (enforced in CI)
severity = medium
